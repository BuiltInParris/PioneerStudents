html
	body(style="background-image: url('images/addUserBackground.jpg');background-position:center")
		div(style='margin:15px')
			h1(style='text-align:center;color:white') Super Nifty User Creation
			br
			div(class='col-md-5')
				.well(style="background-color: rgba(78, 93,108,0.5);")
					h3(style="color:white;text-align:center") User Information:
					br
					form(action='/createuser', method='POST')
						.input-group
							span#basic-addon1.input-group-addon Username: 
							input.form-control(type='text', pattern="^[0-9a-zA-Z]+$",placeholder='Username', name='username', aria-describedby='basic-addon1')
						br
						.input-group
							span#basic-addon1.input-group-addon City:
							input#geocomplete.form-control(type='text', placeholder='City', name='city', aria-describedby='basic-addon1')
						br
						.input-group
							span#basic-addon1.input-group-addon First Name:
							input.form-control(type='text', placeholder='First Name', name='firstname', aria-describedby='basic-addon1')
						br
						.input-group
							span#basic-addon1.input-group-addon Last Name:
							input.form-control(type='text', placeholder='Last Name', name='lastname', aria-describedby='basic-addon1')
						br
						center
							input(class="btn btn-default" type="submit" value="Submit" action='/newuser')

			div(class='col-md-5 col-md-offset-2' style="color:#333;")
				.well(style="background-color: rgba(78, 93,108,0.5);")
					h3(style="color:white;text-align:center") Image:
					#simpleUpload
						.meter
							span.roller
						#dropzone
						form#my-dropzone.dropzone(action='/upload_image')
